@model IEnumerable<SpongeBob_Mall.Models.Goods>
@using System.Collections;
@using System.Xml.Linq;
@using System.Xml;
@{
    XmlDocument xmlDocument = new XmlDocument();
    xmlDocument.Load("F:/CodeBag/ASP.NET/SpongeBob_Mall/SpongeBob_Mall/XML/Choose_Class.xml");
}
<div class="cen2">
    <div class="info-left">
        <div class="left_panel">
            <div class="left_choose_menu">
                <div class="choose_class"><a>…稀有度</a></div>
                <div class="choose_list" id="choose_list_rare">
                    <ul>
                        @{
                            XmlNode root = xmlDocument.SelectSingleNode("choose_class/xiyoudu");
                            XmlNodeList list = root.ChildNodes;
                            foreach (XmlNode item in list)
                            {
                                <li>
                                    @if ((string)HttpContext.Current.Session["bj1"] == item.FirstChild.InnerText)
                                    {
                                        @Html.ActionLink(item.FirstChild.InnerText, "Index", new { type = 1, choose = item.FirstChild.InnerText }, new { @class = "choose_div choosecheck", @style = "color:" + item.LastChild.InnerText })
                                    }
                                    else
                                    {
                                        @Html.ActionLink(item.FirstChild.InnerText, "Index", new { type = 1, choose = item.FirstChild.InnerText }, new { @class = "choose_div", @style = "color:" + item.LastChild.InnerText })
                                    }
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="left_choose_menu">
                <div class="choose_class"><a>…类型</a></div>
                <div class="choose_list" id="choose_list_type">
                    <ul>
                        @{
                            XmlNode root1 = xmlDocument.SelectSingleNode("choose_class/leixing");
                            XmlNodeList list1 = root1.ChildNodes;
                            foreach (XmlNode item in list1)
                            {
                                <li>
                                    @if ((string)HttpContext.Current.Session["bj2"] == item.FirstChild.InnerText)
                                    {
                                        @Html.ActionLink(item.FirstChild.InnerText, "Index", new { type = 2, choose = item.FirstChild.InnerText }, new { @class = "choose_div choosecheck" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink(item.FirstChild.InnerText, "Index", new { type = 2, choose = item.FirstChild.InnerText }, new { @class = "choose_div" })
                                    }
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="info-right">
        <div class="main_panel">
            <div class="main_choose_menu">
                <div class="choose_menu_left" id="choose_menu_left">
                    <ul>
                        <li class="sort_way">时间升序</li>
                        <li class="sort_way">价格升序</li>
                    </ul>
                </div>
                <div class="search_bar">
                    <input class="searchbox" placeholder="输入物品名称" />
                    <a href="#" class="searchbtn">搜索</a>
                </div>
            </div>
            <div class="main_goods_list">
                @foreach (var item in Model)
                {
                    <a href="#" class="goods_div">

                        <div class="goods_img">
                            <img class="goodsimg" src="../img/sp/@item.Map.Picture" />
                        </div>
                        <div class="goods_date">
                            @item.Map.Name
                        </div>
                        <br />
                        <div class="goods_price">
                            参考价格:￥999<small>.99</small>
                        </div>
                        <div class="tag tag_arcana">@item.Map.Rare</div>
                    </a>
                }
            </div>
            <div class="change_page">
                <a href="#" class="chpa change_buttom1">上一页</a>
                <a href="#" class="chpa page_number">1</a>
                <a href="#" class="chpa change_buttom2">下一页</a>
            </div>
        </div>
    </div>
</div>